{
  "name": "GreenScore AI",
  "description": "Shows environmental impact of AI tools",
  "version": "1.0",
  "manifest_version": 3,
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GreenScore AI"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "scripting",
    "tabs"
  ]
}